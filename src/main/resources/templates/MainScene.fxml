<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SSChallenge.AmazonWordCloud.controller.MainSceneController">
   <center>
      <TableView fx:id="tableWords" prefHeight="800" prefWidth="600.0">
          <placeholder>
              <Label text="Esperando..."/>
          </placeholder>
        <columns>
          <TableColumn fx:id="columnWord" prefWidth="75.0" text="Palabra" />
          <TableColumn fx:id="columnOccurrences" prefWidth="75.0" sortType="DESCENDING" text="Cantidad de Apariciones" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
